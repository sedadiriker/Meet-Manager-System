@{
    ViewData["Title"] = "Home Page";
}

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <a href="#" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"><i
                class="fas fa-download fa-sm text-white-50"></i> Generate Report</a>
    </div>

    <!-- Content Row -->
    <div class="row">

        <!-- Son Toplantılar -->
        <div class="col-xl-4 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                        Son Toplantılar
                    </div>
                    <ul class="list-group list-group-flush son-toplantilar">


                    </ul>
                </div>
            </div>
        </div>

        <!-- Yaklaşan Toplantılar -->
        <div class="col-xl-4 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                        Yaklaşan Toplantılar
                    </div>
                    <ul class="list-group list-group-flush yaklasan-toplantilar">
                     
                    </ul>
                    <div id="noMeetingsMessage" style="display: none;" class="text-center text-danger mt-2">
                        Yaklaşan toplantınız bulunmamaktadır.
                    </div>
                </div>
            </div>
        </div>


        <!-- Takvim -->
        <div class="col-xl-4 col-md-6 mb-4">
            <div class="card border-left-danger shadow h-100 py-2">
                <div class="card-body">
                    <div class="text-xs font-weight-bold text-uppercase mb-1 text-center text-danger">
                        Etkinlik Takvimi
                    </div>
                    <div id="calendar"></div>
                </div>
            </div>
        </div>

    </div>

    <!-- Content Row -->

    <div class="row">

        <!-- Toplantı Trend Chart -->
        <div class="col-xl-4 col-md-6 mb-4">
            <div class="card shadow h-100 py-2">
                <div class="card-body">
                    <div class="text-xs font-weight-bold text-dark text-uppercase mb-1">
                        Toplantı Trendi
                    </div>
                    <canvas id="meetingTrendChart"></canvas>
                </div>
            </div>
        </div>

    </div>

    <!-- Content Row -->
    <div class="row">

        <div class="container my-5 table-responsive">
            <h2 class="mb-4 text-primary" style="text-shadow: 1px 1px 1px black;">Son Eklenen Toplantılar</h2>
            <table class="table table-striped">
                <thead>
                    <tr class="text-center text-uppercase text-primary" style="font-size: 12px">
                        <th class="name-cell">Adı</th>
                        <th class="start-date-cell">Başlangıç Tarihi</th>
                        <th class="end-date-cell">Bitiş Tarihi</th>
                        <th class="description-cell">Açıklama</th>

                    </tr>
                </thead>
                <tbody id="meetingsBody" class="text-center">
                </tbody>
            </table>

            <div class="pagination-container d-flex justify-content-center">
                <button id="prevPage" class="btn btn-primary pagination-button">Önceki</button>
                <span id="pageInfo" class="pagination-info mx-3"></span>
                <button id="nextPage" class="btn btn-primary pagination-button">Sonraki</button>
            </div>

        </div>

    </div>

</div>
<!-- /.container-fluid -->