@{
    ViewData["Title"] = "Toplantılarım";
}

<div class="container mt-5 table-responsive">
    <h2 class="mb-4 text-primary" style="text-shadow: 1px 1px 1px black;">Toplantılarım</h2>
    <table class="table table-striped">
      <thead>
        <tr class="text-center text-uppercase text-primary" style="font-size: 12px">
          <th class="name">Adı</th>
          <th class="start-date-">Başlangıç Tarihi</th>
          <th class="end-date-">Bitiş Tarihi</th>
          <th class="description-">Açıklama</th>
          <th class="document-">Döküman</th>
          <th class="actions-">İşlemler</th>
        </tr>
      </thead>
      <tbody id="meetingsBody2" class="text-center">
        <button id="generateReportButton" class="btn btn-outline-success btn-sm m-1 tooltip-button" data-tooltip="Rapor Oluştur">Rapor Oluştur</button>

      </tbody>
    </table>
    
  <!-- Modal -->
<div class="modal fade" id="emailModal" tabindex="-1" role="dialog" aria-labelledby="emailModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="emailModalLabel">Toplantı Bilgilendirme E-postası Gönder</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="form-group">
          <label for="emailRecipients">E-posta Adres yada adresleri giriniz:</label>
          <input type="text" class="form-control" id="emailRecipients" placeholder="example1@gmail.com, example2@gmail.com">
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
        <button type="button" class="btn btn-primary" id="sendEmailButton">E-posta Gönder</button>
      </div>
    </div>
  </div>
</div>


  </div>